<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".View.ListAct"
    android:weightSum="100"
    android:orientation="vertical">

    <EditText
        android:id="@+id/nameDessert"
        android:layout_width="match_parent"
        android:layout_weight="10"
        android:layout_height="0dp"
        android:ems="10"
        android:textSize="16sp"
        android:inputType="text"
        android:hint="@string/hintAddName"
        android:paddingTop="10dp"
        android:layout_marginEnd="8dp"
        android:autofillHints="@string/hintFilterType"
        tools:targetApi="o" />

    <EditText
        android:id="@+id/ppuDessert"
        android:layout_width="180dp"
        android:layout_weight="10"
        android:layout_height="0dp"
        android:ems="10"
        android:textSize="16sp"
        android:inputType="number"
        android:hint="@string/hintAddPpu"
        android:paddingTop="10dp"
        android:layout_marginEnd="8dp"
        android:autofillHints="@string/hintFilterType"
        tools:targetApi="o" />

    <Spinner
        android:id="@+id/spinnerType"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/marginTopAddDessert"
        android:layout_weight="10" />

    <Spinner
        android:id="@+id/spinnerBatter"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/marginTopAddDessert"
        android:layout_height="0dp"
        android:layout_weight="10" />

    <Spinner
        android:id="@+id/spinnerTopping"
        android:layout_marginTop="@dimen/marginTopAddDessert"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10" />

    <Button
        android:id="@+id/btnAddDessert"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textColor="@color/white"
        android:background="@color/colorAccent"
        android:layout_marginStart="@dimen/fab_margin"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginTop="@dimen/marginTopAddDessert"
        android:layout_weight="10"
        android:text="@string/btnAddDessert" />


</LinearLayout>